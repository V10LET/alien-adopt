<h1>Log in</h1>
<div class="form">
  <div style="color: red"><%= flash[:error] %></div>
  <%= form_with url: login_path do |f| %>

    <p><%= f.label :email %> <%= f.email_field :email %></p>
    <p><%= f.label :password %> <%= f.password_field :password %></p>

    <%= f.submit "Log in"%>
  <% end %>
  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
