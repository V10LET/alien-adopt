<% if @current_owner %>
  <h1>Name: <%=@owner.name%></h1>
  <div class="form">
    <p>Bio: <%=@owner.bio%></p>
    <p>Planet: <%=@owner.planet.name%></p>
    <p>Therapy? <%=@owner.therapy%></p>
    <p>Email: <%=@owner.email%></p>
    <p>Aliens you've adopted:</p>
    <% if @owner.aliens == nil || @owner.aliens == [] %>
      <span style="font-style: oblique">You haven't adopted any aliens yet!</span>
      <br/>
    <% else %>
    <ul>
      <%@owner.aliens.each do |alien| %>
        <li><%= alien.name%></li>
      <% end %>
    </ul>
    <% end %>
  </div>
  <%= button_to "I wanna loggity log out", '/logout', method: :delete %>
<% end %>
